<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment"
    android:background="#3d3b4a">

    <TextView
        android:id="@+id/appname"
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ff9a0e"
        android:text="Cinema CGP"
        android:textSize="50dp"/>

    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginLeft="100dp"
        android:id="@+id/listText"
        android:layout_below="@id/appname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="On Theater Right Now"
        android:textSize="20dp"/>

    <LinearLayout
        android:layout_below="@id/listText"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@drawable/layout_bg4"
        android:layout_marginLeft="100dp"
        android:id="@+id/line1"
        android:orientation="horizontal" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="425dp"
        android:id="@+id/movieContainer"
        android:layout_below="@id/line1"/>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_below="@id/movieContainer"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@drawable/layout_bg4"
        android:layout_marginLeft="100dp"
        android:id="@+id/line2"
        android:orientation="horizontal" />


</RelativeLayout>